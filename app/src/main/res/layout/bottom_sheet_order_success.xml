<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_rounded_corner"
    android:padding="15dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#c9ccd1"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/order_success_icon"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank You For\nYour Order"
        android:textColor="@color/black"
        android:layout_marginTop="19dp"
        android:textSize="18dp"
        android:fontFamily="@font/switzer_medium"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your order has been place successfully.\nWe will deliver your order soon."
        android:textColor="#828A89"
        android:layout_marginTop="10dp"
        android:textSize="11dp"
        android:fontFamily="@font/switzer_regular"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backHomeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetLeft="0dp"
        android:insetBottom="0dp"
        android:text="Back Home"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:cornerRadius="11dp"
        android:backgroundTint="@color/black"
        android:paddingVertical="12dp" />

</LinearLayout>